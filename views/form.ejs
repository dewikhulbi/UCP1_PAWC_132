<h2><%= animal ? 'Edit Animal' : 'Add Animal' %></h2>
<form action="<%= animal ? '/edit/' + animal.id : '/add' %>" method="POST">
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= animal ? animal.name : '' %>" required>

  <label for="species">Species:</label>
  <input type="text" name="species" value="<%= animal ? animal.species : '' %>" required>

  <label for="age">Age:</label>
  <input type="number" name="age" value="<%= animal ? animal.age : '' %>" required>

  <label for="description">Description:</label>
  <textarea name="description" required><%= animal ? animal.description : '' %></textarea>

  <button type="submit">Submit</button>
</form>
